<div id="flash">
  <div class="fixed bottom-5 right-5 z-50 flex flex-col gap-2">
    <% flash.each do |type, message| %>
      <% 
       color_class = case type
         when "notice" then "bg-emerald-900 border-emerald-700 text-emerald-100"
         when "alert" then "bg-red-900 border-red-700 text-red-100"
         else "bg-gray-800 border-gray-700 text-white"
       end
    %>
      <div data-controller="toast" 
         class="flex items-center w-full max-w-xs p-4 rounded-lg border shadow-lg <%= color_class %> transition-all duration-500 transform translate-y-full opacity-0">
        <div class="inline-flex items-center justify-center shrink-0 w-8 h-8 rounded-lg bg-white/10">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3 text-sm font-normal"><%= message %></div>
        <button type="button" data-action="click->toast#dismiss" class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 inline-flex h-8 w-8 text-white/50 hover:text-white hover:bg-white/10">
          <span class="sr-only">Close</span>
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
</div>