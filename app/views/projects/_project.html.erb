<div id="<%= dom_id(project) %>" class="group flex items-center justify-between px-3 py-2 text-sm font-medium text-gray-400 hover:text-white hover:bg-gray-900 rounded-lg transition-colors">
  <%= link_to project, 
      data: { turbo_frame: "main_content", turbo_action: "advance" }, 
      class: "flex items-center flex-1 min-w-0 truncate mr-2" do %>
    <span class="text-gray-600 group-hover:text-gray-500 mr-3">#</span>
    <span class="truncate"><%= project.title %></span>
  <% end %>
  <div class="flex items-center justify-center min-w-4">
    <% if project.tasks.size > 0 %>
      <span class="text-xs text-gray-600 group-hover:hidden font-mono">
        <%= project.tasks.size %>
      </span>
    <% end %>
    <div class="hidden group-hover:block">
      <%= button_to project_path(project), 
          method: :delete, 
          class: "text-gray-500 hover:text-red-400 transition-colors",
          form: { class: "flex" }, 
          data: { turbo_confirm: "Delete project '#{project.title}'?" } do %>
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </div>
</div>