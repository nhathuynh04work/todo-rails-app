<%= turbo_frame_tag "new_project_form" do %>
  <%= form_with(model: project, class: "px-3 mb-2") do |f| %>
    <div class="relative">
      <%= f.text_field :title, 
          placeholder: "Project name...", 
          class: "w-full bg-gray-900 text-white text-sm border border-indigo-500 rounded-md px-2 py-1 focus:outline-none focus:ring-1 focus:ring-indigo-500 placeholder-gray-600",
          autofocus: true,
          autocomplete: "off",
          data: { action: "keydown.esc->turbo-frame#remove" } 
      %>
      <%= f.submit class: "hidden" %>
    </div>
    <div class="flex justify-end mt-1">
      <%= link_to "Cancel", dashboard_path, class: "text-xs text-gray-500 hover:text-gray-300", 
                                            data: { turbo_frame: "project_sidebar_ui" } %>
    </div>
  <% end %>
<% end %>