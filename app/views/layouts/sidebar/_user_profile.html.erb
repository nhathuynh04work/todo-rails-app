<div class="border-t border-gray-800 p-4 bg-gray-950">
  <div class="flex items-center justify-between">
    <div class="flex items-center min-w-0">
      <div class="h-8 w-8 rounded-full bg-indigo-900/50 border border-indigo-500/30 flex items-center justify-center text-xs font-bold text-indigo-300">
        <%= current_user.email.first.upcase %>
      </div>
      <div class="ml-3 min-w-0">
        <p class="text-sm font-medium text-white truncate"><%= current_user.email %></p>
      </div>
    </div>
    <%= button_to logout_path, method: :delete, class: "ml-2 text-gray-500 hover:text-red-400 transition-colors p-1" do %>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
    <% end %>
  </div>
</div>