<%= turbo_frame_tag "new_task_ui" do %>
  <% if local_assigns[:open] %>
    <%= render "tasks/form", project: project %>
  <% else %>
    <%= link_to new_task_path(project_id: project.id), 
        class: "group flex items-center gap-3 py-2 px-1 text-gray-500 hover:text-indigo-400 transition-colors cursor-pointer w-full text-left" do %>
      <div class="h-5 w-5 rounded-full border border-gray-600 group-hover:border-indigo-500 flex items-center justify-center transition-colors">
        <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </div>
      <span class="text-sm font-medium">Add task</span>
    <% end %>
  <% end %>
<% end %>