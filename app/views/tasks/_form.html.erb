<%= form_with(model: [Task.new], class: "mb-2") do |f| %>
  <%= hidden_field_tag :project_id, project.id %>
  <div class="relative">
    <%= f.text_field :title, 
        placeholder: "Task title...", 
        class: "w-full bg-gray-900 text-white text-sm border border-indigo-500 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-indigo-500 placeholder-gray-600",
        autofocus: true,
        autocomplete: "off",
        data: { action: "keydown.esc->turbo-frame#remove" } 
    %>
    <%= f.submit class: "hidden" %>
  </div>
  <div class="flex justify-end gap-2 mt-2">
    <%= link_to "Cancel", project_path(project), 
        class: "px-3 py-1 text-xs font-medium text-gray-400 hover:text-white transition-colors",
        data: { turbo_frame: "new_task_ui" } %>
    <%= f.button "Add Task", class: "px-3 py-1 text-xs font-medium bg-indigo-600 text-white rounded hover:bg-indigo-500 transition-colors" %>
  </div>
<% end %>